<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog id="helloDialog1" title="Approval Remarks">
		<f:SimpleForm id="simpleform1" editable="false" minWidth="1024" maxContainerCols="2" layout="ResponsiveGridLayout" labelSpanL="3"
			labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
			<f:content>
				<Label text="Remarks" required="true"/>
				<TextArea id="remark1" 	rows="5" width="100%"/>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="Submit" type="Accept" press="onApprDialogSubmit"></Button>
			<Button text="Cancel" type="Reject" press="onApprDialogCancel"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>